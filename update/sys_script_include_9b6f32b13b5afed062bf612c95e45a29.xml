    <sys_script_include action="INSERT_OR_UPDATE">
        <access>public</access>
        <active>true</active>
        <api_name>x_snc_devtools.GetAgentRecord</api_name>
        <caller_access/>
        <client_callable>false</client_callable>
        <description>Returns the GlideRecord object of an AI Agent based on its Sys Id or name.</description>
        <mobile_callable>false</mobile_callable>
        <name>GetAgentRecord</name>
        <sandbox_callable>false</sandbox_callable>
        <script><![CDATA[function GetAgentRecord(vAgent)
{
	var grAgent = GetRecord('sn_aia_agent',vAgent);
	if (IsValidRecord(grAgent) == true)
	{
		return grAgent;
	}

	var grAgent = new GlideRecord('sn_aia_agent');
	grAgent.addQuery('name','=',vAgent);
	grAgent.query();
	if (grAgent.getRowCount() != 1)
	{
		return false;
	}
	if (grAgent.next() == true)
	{
		return grAgent;
	}
	
	return false;
}]]></script>
