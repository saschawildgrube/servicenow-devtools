        <script><![CDATA[function FindSysId()
{
	var strSysId = prompt('\nDevTools: Find Sys ID\n\nPlease enter a Sys ID to search for:');
	if (strSysId == null)
	{
		return;
	}
	
	var ga = new GlideAjax('DevToolsClientAPI');
	ga.addParam('sysparm_name','GetTableFromSysId');
	ga.addParam('sysparm_sys_id',strSysId);
	ga.getXML(Response_GetTableFromSysId);
	function Response_GetTableFromSysId(response)
	{
		var strTable = response.responseXML.documentElement.getAttribute('answer');
		if (strTable == 'false')
		{
			alert('\nDevTools: Record not found. Sorry.');
		}
		else
		{
			top.window.location.href = '/nav_to.do?uri=%2F'+strTable+'.do%3Fsys_id%3D'+strSysId;
		} 
	}
}]]></script>
